            class="transaction btn btn-outline-warning my-2 my-sm-0" type="submit">AddTransaction</button></a></form>

    </nav>
    <div class="row d-flex justify-content-center h-100">
      <div class="col-lg-3 col-xl-3">
        <table class="table " style="width: 100%; margin: 0; background-color: wheat;">
          <thead class="thead-dark">
            <% for ( let i=0; i < account.length ; i++) { %>
              <h1> Members</h1>
              <tr class="text-center">
                <th scope="col" name="refId" style="width: 350px;">memberName</th>
                <th scope="col" name="action"><button class="member" value="" id="updateBtn" style="width: 120px;">
                    <a href="/account/addMember/<%= accountId%>">Member &#43; </a></button></th>
              </tr>
          </thead>
          <tbody>
            <tr>
              <% for (let j=0; j< account[i].members.length ; j++) {%>
                <td>
                  <%=account[i].members[j].name %>
                </td>
                <td class="text-center" style="margin-left:50%">

                  <div class="row d-flex justify-content-center">
                    <button class="accountbtn" value="" id="updateBtn"> <a
                        onclick="return confirm(`Are You Sure You Want To Delete?`)"
                        href="http://localhost:3000/account/deleteMember/<%= account[i].members[j]._id %>">
                        &times</a>
                    </button>
                  </div>
                </td>
            </tr>
            <% } %>
              <% } %>
          </tbody>
        </table>
      </div>
